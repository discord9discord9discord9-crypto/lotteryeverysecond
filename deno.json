{
  "workspace": ["./backend", "./frontend"],
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno task dev:backend & deno task dev:frontend",
    "dev:backend": "deno task --cwd backend dev",
    "dev:frontend": "cd frontend && npm run dev"
  }
}
